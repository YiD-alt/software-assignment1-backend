<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Happer 3.8//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.UserDao">

    <select id="findBySearch" resultType="com.example.entity.User">
        select * from user
        <where>
            <if test="params !=null and params.name !=null and params.name !=''">
                and name like concat('%',#{ params.name },'%')
            </if>
            <if test="params !=null and params.phone !=null and params.phone !=''">
                and phone like concat('%',#{ params.phone },'%')
            </if>
        </where>
    </select>
</mapper>